# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key is required for server-side operations like place details caching
# Keep this secret and never expose it in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Sanity CMS Configuration
# Server-side variables (for API routes and server components)
SANITY_PROJECT_ID=your_sanity_project_id
SANITY_DATASET=production
SANITY_API_READ_TOKEN=your_sanity_read_token
SANITY_API_WRITE_TOKEN=your_sanity_write_token
SANITY_PREVIEW_SECRET=your_random_preview_secret
SANITY_API_VERSION=2024-10-21
SANITY_REVALIDATE_SECRET=your_revalidate_secret

# Client-side variables (for Sanity Studio - must have NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_SANITY_PROJECT_ID=your_sanity_project_id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-10-21
# Note: Use same API version as server-side (2024-10-21) for consistency

# Google APIs Configuration (Optional)
GOOGLE_PLACES_API_KEY=your_google_places_api_key
ROUTING_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_DIRECTIONS_API_KEY=your_google_directions_api_key

# Routing Configuration (Optional)
ROUTING_PROVIDER=mapbox
ROUTING_MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Error Tracking Configuration (Optional)
# Sentry DSN for error tracking - get from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_RELEASE=your_release_version
# Enable error tracking in production (set to "true" to enable)
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Rate Limiting Configuration (Optional - for production)
# Upstash Redis for distributed rate limiting - get from https://upstash.com
# If not configured, falls back to in-memory rate limiting (suitable for local development)
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token


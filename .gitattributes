# Auto detect text files and perform LF normalization
* text=auto

# Source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Package files
package-lock.json text eol=lf
yarn.lock text eol=lf

# Config files
*.config.* text eol=lf
.env* text eol=lf

# Documentation
*.md text eol=lf
docs/** text eol=lf

# Scripts
scripts/** text eol=lf
*.sh text eol=lf
*.mjs text eol=lf

# SQL migrations
*.sql text eol=lf
supabase/** text eol=lf

